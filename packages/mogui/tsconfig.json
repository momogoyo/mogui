{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "types",
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "strict": false,
    "incremental": true,
    "paths": {
      "..//*": ["components/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],  
  "exclude": [
    "node_modules",
    "dist"
  ]
}